{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES2015"],
    "outDir": "./dist",
    "experimentalDecorators": true,
    "typeRoots": ["src/types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [".", "src/**/*.ts", "src/**/*.js", "src/**/*.cjs"]
}
